{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Drag the sliders to highlight points.",
  "data": {
    "url": "https://vega.github.io/vega-editor/app/data/cars.json"
  },
  "transform": [
    {
      "calculate": "year(datum.Year)",
      "as": "Year"
    }
  ],
  "layer": [
    {
      "selection": {
        "CylYr": {
          "type": "single",
          "fields": [
            "Cylinders",
            "Year"
          ],
          "bind": {
            "Cylinders": {
              "input": "range",
              "min": 3,
              "max": 8,
              "step": 1
            },
            "Year": {
              "input": "range",
              "min": 1969,
              "max": 1981,
              "step": 1
            }
          }
        }
      },
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Horsepower",
          "type": "quantitative"
        },
        "y": {
          "field": "Miles_per_Gallon",
          "type": "quantitative"
        },
        "color": {
          "condition": {
            "selection": "CylYr",
            "field": "Origin",
            "type": "nominal"
          },
          "value": "white"
        },
        "opacity": {
          "condition": {
            "selection": "CylYr",
            "value": 0.2
          },
          "value": 0
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "CylYr"
          }
        }
      ],
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Horsepower",
          "type": "quantitative"
        },
        "y": {
          "field": "Miles_per_Gallon",
          "type": "quantitative"
        },
        "color": {
          "field": "Origin",
          "type": "nominal"
        },
        "size": {
          "value": 100
        }
      }
    }
  ]
}